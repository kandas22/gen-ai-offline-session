            {
                "scenario_id": "SC002",
                "scenario_name": "Verify navigation link functionality",
                "tags": [
                    "@navigation",
                    "@functional"
                ],
                "given": [
                    {
                        "step": "User is on help documentation page",
                        "url": "https://app.makeprd.ai/help-docs",
                        "wait_until": "domcontentloaded",
                        "timeout": 60000,
                        "retries": 2
                    }
                ],
                "when": [
                    {
                        "step": "User clicks on Quick Start Guide link",
                        "action": "click",
                        "element": {
                            "type": "link",
                            "locator": "text=Quick Start Guide",
                            "locator_type": "playwright"
                        }
                    }
                ],
                "then": [
                    {
                        "step": "URL should update with section anchor",
                        "validation_type": "url_contains",
                        "expected_text": "#quick-start",
                        "expected_result": true
                    }
                ]
            },
            {
                "scenario_id": "SC003",
                "scenario_name": "Verify Support & Contact button functionality",
                "tags": [
                    "@support",
                    "@functional"
                ],
                "given": [
                    {
                        "step": "User is on help documentation page",
                        "url": "https://app.makeprd.ai/help-docs"
                    }
                ],
                "when": [
                    {
                        "step": "User clicks on Support & Contact button",
                        "action": "click",
                        "element": {
                            "type": "button",
                            "locator": "text=Support & Contact",
                            "locator_type": "playwright"
                        }
                    }
                ],
                "then": [
                    {
                        "step": "Support contact form or page should be visible",
                        "validation_type": "element_visible",
                        "element": {
                            "type": "container",
                            "locator": "[role='dialog'], .support-modal, .contact-form",
                            "locator_type": "css"
                        },
                        "expected_result": "visible"
                    }
                ]
            }
        ],
        "configuration": {
            "base_url": "https://app.makeprd.ai",
            "timeout": 30000,
            "implicit_wait": 10,
            "browser": "chromium",
            "headless": false
