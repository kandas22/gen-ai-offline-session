{
    "specification": {
        "feature": {
            "name": "MakePRD Help Documentation Validation",
            "description": "Validate all documentation sections in the sidebar are present",
            "tags": [
                "@help-docs",
                "@validation",
                "@async"
            ]
        },
        "scenarios": [
            {
                "scenario_id": "SC001",
                "scenario_name": "Verify all sidebar navigation items exist",
                "tags": [
                    "@smoke",
                    "@critical"
                ],
                "given": [
                    {
                        "step": "User navigates to help docs and waits for sidebar",
                        "url": "https://app.makeprd.ai/help-docs",
                        "wait_until": "networkidle",
                        "timeout": 60000,
                        "retries": 2
                    }
                ],
                "when": [],
                "then": [
                    {
                        "step": "Contents header should be visible",
                        "validation_type": "element_exists",
                        "element": {
                            "locator": "text=Contents",
                            "locator_type": "playwright"
                        }
                    },
                    {
                        "step": "Quick Start Guide link should be present",
                        "validation_type": "element_exists",
                        "element": {
                            "locator": "a:has-text('Quick Start Guide'), button:has-text('Quick Start Guide'), div:has-text('Quick Start Guide')",
                            "locator_type": "css"
                        }
                    },
                    {
                        "step": "AI Modes link should be present",
                        "validation_type": "element_exists",
                        "element": {
                            "locator": "a:has-text('AI Modes'), button:has-text('AI Modes'), div:has-text('AI Modes')",
                            "locator_type": "css"
                        }
                    },
